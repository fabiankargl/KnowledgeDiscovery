@prefix ex: <http://example.org/ontology#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .

<> a owl:Ontology ;
    rdfs:label "Basketball Athlete Ontology"@en ;
    rdfs:comment "An ontology describing athlete data from https://www.basketball-reference.com/."@en ;
    rdfs:isDefinedBy <http://example.org/ontology> .

### Classes
ex:Athlete a rdfs:Class ;
    rdfs:label "Athlete"@en ;
    rdfs:comment "A professional sports player."@en ;
    rdfs:subClassOf foaf:Person .

ex:Team a rdfs:Class ;
    rdfs:label "Team"@en ;
    rdfs:comment "A sports team"@en .

ex:PerformanceMetric a rdfs:Class ;
    rdfs:label "Performance Metric"@en ;
    rdfs:comment "Performance data such as position."@en .

ex:Education a rdfs:Class ;
    rdfs:label "Education"@en ;
    rdfs:comment "Educational institution."@en .

ex:CareerEvent a rdfs:Class ;
    rdfs:label "Career Event"@en ;
    rdfs:comment "An event in the athlete's career such as a draft."@en .

ex:SocialMediaProfile a rdfs:Class ;
    rdfs:label "Social Media Profile"@en ;
    rdfs:comment "Profile or URL representing the athlete's online presence."@en .

ex:Location a rdfs:Class ;
    rdfs:label "Location"@en ;
    rdfs:comment "A geographical place such as city or country."@en .

### Properties
ex:hasProfile a rdf:Property ;
    rdfs:domain ex:Athlete ;
    rdfs:range ex:SocialMediaProfile ;
    rdfs:label "has profile"@en ;
    rdfs:comment "Links an athlete to their profile URL or social media presence."@en .

ex:playsFor a rdf:Property ;
    rdfs:domain ex:Athlete ;
    rdfs:range ex:Team ;
    rdfs:label "plays for"@en ;
    rdfs:comment "Relates an athlete to the team they play for."@en .

ex:birthDate a rdf:Property ;
    rdfs:domain ex:Athlete ;
    rdfs:range xsd:date ;
    rdfs:label "birth date"@en ;
    rdfs:comment "Date of birth of the athlete."@en .

ex:birthCity a rdf:Property ;
    rdfs:domain ex:Athlete ;
    rdfs:range ex:Location ;
    rdfs:label "birth city"@en ;
    rdfs:comment "City where the athlete was born."@en .

ex:birthCountry a rdf:Property ;
    rdfs:domain ex:Athlete ;
    rdfs:range ex:Location ;
    rdfs:label "birth country"@en ;
    rdfs:comment "Country where the athlete was born."@en .

ex:position a rdf:Property ;
    rdfs:domain ex:Athlete ;
    rdfs:range rdfs:Literal ;
    rdfs:label "position"@en ;
    rdfs:comment "The player's postion (Forward, Guard)."@en .

ex:shoots a rdf:Property ;
    rdfs:domain ex:Athlete ;
    rdfs:range rdfs:Literal ;
    rdfs:label "shoots"@en ;
    rdfs:comment "Shooting hand of the player."@en .

ex:weight a rdf:Property ;
    rdfs:domain ex:Athlete ;
    rdfs:range xsd:decimal ;
    rdfs:label "weight"@en ;
    rdfs:comment "Player weight in kilograms."@en .

ex:age a rdf:Property ;
    rdfs:domain ex:Athlete ;
    rdfs:range xsd:integer ;
    rdfs:label "age"@en ;
    rdfs:comment "Current age of the athlete."@en .

ex:attendedCollege a rdf:Property ;
    rdfs:domain ex:Athlete ;
    rdfs:range ex:Education ;
    rdfs:label "attended college"@en ;
    rdfs:comment "Links the athlete to their college."@en .

ex:attendedHighSchool a rdf:Property ;
    rdfs:domain ex:Athlete ;
    rdfs:range ex:Education ;
    rdfs:label "attended high school"@en ;
    rdfs:comment "Links the athlete to their high school."@en .

ex:hasDraft a rdf:Property ;
    rdfs:domain ex:Athlete ;
    rdfs:range ex:CareerEvent ;
    rdfs:label "has draft"@en ;
    rdfs:comment "Draft information related to the athlete."@en .

ex:hasTransaction a rdf:Property ;
    rdfs:domain ex:Athlete ;
    rdfs:range ex:CareerEvent ;
    rdfs:label "has transaction"@en ;
    rdfs:comment "Career transactions such as transfer or trades."@en .
